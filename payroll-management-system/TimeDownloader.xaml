<Window x:Class="TimeDownloader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:payroll_management_system"
        mc:Ignorable="d"
        Title="TimeDownloader" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <DatePicker x:Name="dtPayrollDate" SelectedDateChanged="dtPayrollDate_SelectedDateChanged" HorizontalAlignment="Left" Margin="8" VerticalAlignment="Center"/>
        <Button x:Name="btnDownload" Click="btnDownload_Click" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="4" Margin="8">Download</Button>

        <Label x:Name="lbStatus" FontSize="16" FontWeight="DemiBold" Grid.Row="1" Margin="8" Width="250" HorizontalAlignment="Left">Status:</Label>
        <Label x:Name="lbPage" FontSize="24" FontWeight="DemiBold" Grid.Row="1" Margin="8" Width="75" HorizontalAlignment="Right" HorizontalContentAlignment="Center" VerticalAlignment="Center">0/0</Label>

        <ProgressBar x:Name="pb" Grid.Row="2"/>
    </Grid>
</Window>
